{
    "title": "[User] Global",
    "rules": [
        {
            "description": "Control-0 → 'Center Current Application on Primary Display'",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "0",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/Users/stephancasas/.config/karabiner/scripts/center_app_on_primary_disp.jxa"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Global: Right Command + K/O/L/; → Arrow Keys",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_gui",
                        "modifiers": {
                            "mandatory": [
                                "right_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "cmd_arrows_mode",
                                "value": 1
                            }
                        },
                        {
                            "set_variable": {
                                "name": "word_mode",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "cmd_arrows_mode",
                                "value": 0
                            }
                        },
                        {
                            "set_variable": {
                                "name": "word_mode",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "right_gui"
                        },
                        {
                            "set_variable": {
                                "name": "cmd_arrows_mode",
                                "value": 1
                            }
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "set_variable": {
                                "name": "cmd_arrows_mode",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_control",
                            "modifiers": [
                                "left_option"
                            ],
                            "repeat": true
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "description": "Visual Studio Code",
                            "bundle_identifiers": [
                                "^com\\.microsoft\\.VSCode$"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_gui",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "cmd_arrows_mode",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "cmd_arrows_mode",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "right_gui"
                        },
                        {
                            "set_variable": {
                                "name": "cmd_arrows_mode",
                                "value": 1
                            }
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "cmd_arrows_mode",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "cmd_arrows_mode",
                            "type": "variable_if",
                            "value": 1
                        },
                        {
                            "type": "frontmost_application_if",
                            "description": "Finder",
                            "bundle_identifiers": [
                                "^com\\.apple\\.finder$"
                            ]
                        }
                    ],
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/Users/stephancasas/.config/karabiner/scripts/finder_open_with_alfred.jxa"
                        }
                    ],
                    "type": "basic",
                    "description": "see attached shell command"
                },
                {
                    "conditions": [
                        {
                            "name": "cmd_arrows_mode",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "cmd_arrows_mode",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "o",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "cmd_arrows_mode",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "semicolon",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Command-CapsLock → 'Dock Item Context Menu'",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/Users/stephancasas/.config/karabiner/scripts/alfred_dock_item_context_menu.jxa"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Restore F11 Factory Function",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f11"
                    },
                    "to_if_alone": [
                        {
                            "key_code": "f19"
                        }
                    ]
                }
            ]
        }
    ]
}